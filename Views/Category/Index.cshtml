@model List<Category>

<div class="container">
    <a asp-action="Create" class="btn btn-primary mt-3 mb-3">Thêm danh mục</a>

    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Content</p>
                        <form asp-action="Delete" asp-route-id="@item.Id" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger" style="cursor: pointer;">Xóa</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
