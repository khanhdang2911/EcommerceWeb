@model List<Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .product-image {
            width: 80px;
            height: 100px;
        }
    </style>
</head>
<body>
   

    <div class="container">
             <a class="btn btn-success mb-3 mt-3" asp-action="Create" asp-controller="Product">Thêm sản phẩm</a>

        <table>
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td><img src="https://img.tgdd.vn/imgt/f_webp,fit_outside,quality_75/https://cdn.tgdd.vn/Products/Images/42/223602/iphone-13-starlight-1-200x200.jpg" class="product-image" alt="..."></td>
                        <td>@item.Name</td>
                        <td>$@item.Price</td>
                        <td>
                            <a asp-action="Delete" asp-controller="Product" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                            <a asp-action="Detail" asp-controller="Product" class="btn btn-primary" asp-route-id="@item.Id">Detail</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
